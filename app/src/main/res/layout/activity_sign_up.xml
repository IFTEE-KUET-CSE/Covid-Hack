<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"

    tools:context=".signUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/topview"
            android:background="#0099ff"
            >
            <TextView
                android:id="@+id/signInTextId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="10dp"
                android:text="Already Registered?"
                android:textColor="@color/white"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/signInTextId2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Click Here."
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/goSignIn"
                android:layout_width="62dp"
                android:layout_height="33dp"
                android:background="@color/DeepSkyBlue"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="155dp"
                android:src="@drawable/go"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/topview2"
            android:layout_below="@+id/topview"
            android:background="@drawable/ic_wave2"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"


                app:srcCompat="@drawable/healthcare" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#0099ff"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"

                 />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topview2">

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/profilePictureId"

                        android:layout_width="152dp"
                        android:layout_height="158dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:background="@color/Lavender" />

                    <Button
                        android:id="@+id/chooseImageId"

                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/round_bg"
                        android:text="tap to select the profile picture" />

                    <EditText
                        android:id="@+id/userNameId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:hint="Enter Your Name"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DimGray" />

                    <EditText
                        android:id="@+id/userPhnId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:hint="Enter Your Phone Number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DimGray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:text="Select Your Gender"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/genderId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"


                        >

                        <ProgressBar
                            android:id="@+id/signUpProgressBarId"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />


                        <RadioButton
                            android:id="@+id/maleId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="5dp"
                            android:text="Male"
                            android:textColor="@color/DimGray" />

                        <RadioButton
                            android:id="@+id/femaleId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="Female"
                            android:textColor="@color/DimGray" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/userEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:hint="Enter Your Email"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DimGray" />

                    <EditText
                        android:id="@+id/password1Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"

                        android:hint="Enter Your Password"
                        android:inputType="textWebPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DimGray" />

                    <EditText
                        android:id="@+id/password2Id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/DimGray" />

                    <Button
                        android:id="@+id/userRegisterId"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/round_bg"
                        android:text="Register" />


                </LinearLayout>


            </ScrollView>


        </RelativeLayout>




    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
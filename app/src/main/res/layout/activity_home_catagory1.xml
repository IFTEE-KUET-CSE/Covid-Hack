<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".homeCatagory1Activity">

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bangladeshstatushome"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="COVID-19 BANGLADESH"
        android:textColor="@color/Blue"
        android:textSize="30sp"
        android:textStyle="bold"

        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Data will be updated after 6 pm.Check after 6 pm."
        android:layout_marginTop="-15dp"
        android:textColor="@color/Blue"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"

        android:gravity="center_horizontal" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:text="Total confirmed cases"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/TotalconfirmedcasesId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textSize="15sp"
                                android:text="Today"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/TodayConfirmedId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="179dp"
                            android:layout_height="177dp"
                            android:background="@drawable/home_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:weightSum="4"

                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Total deaths"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/TotaldeathsId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"

                                android:textAlignment="center" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Today"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/TodaydeathsId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"

                                android:textAlignment="center" />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Confirmed recoveries"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/ConfirmedrecoveriesId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Today"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/TodayConfirmedrecoveriesId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:text="Active confirmed cases"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/ActiveconfirmedcasesId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Critical"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/CriticalId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Total tests"
                                android:textAlignment="center"
                                android:textSize="15sp"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/TotaltestsId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:text="Test Per Million"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/TestPerMillionId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Population"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/PopulationId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Continent"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/ContinentId"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"

                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>




    </ScrollView>



</LinearLayout>
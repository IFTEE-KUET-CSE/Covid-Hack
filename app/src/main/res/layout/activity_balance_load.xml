<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/catagory3bg"
    tools:context=".balanceLoadActivity">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Recharge Through bKash"
        android:textColor="#F40B0B"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/bkash" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="254dp"
        android:layout_height="47dp"


        android:hint="Enter Your Bikash number"
        android:inputType="textPersonName"
       />

    <EditText
        android:id="@+id/amountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:inputType="textPersonName"
        android:hint="Enter The Amount"
         />

    <Button
        android:id="@+id/loadAmountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Load"
         />


</LinearLayout>
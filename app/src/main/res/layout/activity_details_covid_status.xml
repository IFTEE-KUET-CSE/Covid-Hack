<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".detailsCovidStatusActivity">

    <ImageView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bangladeshstatushome"
        />
    <TextView
        android:id="@+id/CountryIdPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:textColor="@color/Blue"
        android:textSize="30sp"
        android:textStyle="bold"

        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:text="Total confirmed cases"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/TotalconfirmedcasesIdPremium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="2"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Today"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/TodayConfirmedIdPremium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="4"
                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="179dp"
                            android:layout_height="177dp"
                            android:background="@drawable/home_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:weightSum="4"

                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Total deaths"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/TotaldeathsIdPremium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="2"
                                android:textAlignment="center" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:text="Today"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/TodaydeathsIdPremium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="4"
                                android:textAlignment="center" />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Confirmed recoveries"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/ConfirmedrecoveriesIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="2"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Today"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/TodayConfirmedrecoveriesIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="4"
                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Active confirmed cases"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/ActiveconfirmedcasesIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="2"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Critical"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/CriticalIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="4"
                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Total tests"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/TotaltestsIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="2"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="Test Per Million"
                                android:textAlignment="center"
                                android:textColor="@color/white" />
                            <TextView
                                android:id="@+id/TestPerMillionIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="4"
                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:background="@drawable/home_background"
                            android:weightSum="4"

                            >
                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Population"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/PopulationIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="2"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/Black"
                                />


                            <TextView
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Continent"
                                android:textColor="@color/white"
                                />
                            <TextView
                                android:id="@+id/ContinentIdPremium"
                                android:textStyle="bold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="4"
                                />


                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>




    </ScrollView>


</LinearLayout>